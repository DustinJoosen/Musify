@model ExploreDto

@{
    ViewData["Title"] = "Explore";
}

<div class="row col-12">
    <form asp-action="Index" method="get" class="row col-8">
        <div class="form-group col-6">
            <label>Search Text</label>
            <input type="text" asp-for="@Model.SearchText"/>
        </div>
        <div class="form-group col-4">
            <select asp-for="@Model.SearchType" class="form-control" asp-items="ViewBag.SearchTypes"></select>
        </div>
        <div class="form-group col-2">
            <button type="submit" class="btn btn-light">Search</button>
        </div>
    </form>
</div>

<hr/>

@await Component.InvokeAsync("ExploreList", new { searchType = Model.SearchType, searchText = Model.SearchText })
