@model List<Playlist>

@{
    ViewData["Title"] = "My playlists";
}


<h3 class="thin-page-header">My playlists</h3>

<div class="explore-table mt-4">
    @if (Model.Any())
    {
        <table class="table table-striped table-bordered table-sm">
            <thead class="thead-dark">
                <tr class="table-header">
                    <th width="80">Actions</th>
                    <th>Title</th>
                    <th width="200">Songs</th>
                </tr>
            </thead>
            @foreach (var playlist in Model)
            {
                <tr class="min-width">
                    <td style="display: flex">
                        <button class="songplaybtn"><i class="fa-solid fa-play"></i></button>
                    </td>
                    <td>
                        <a asp-controller="Details" asp-action="Playlists" asp-route-id="@playlist.Id">@playlist.Title</a>
                    </td>
                    <td>@playlist.PlaylistSongs.Count()</td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No playlists were found.</p>
    }
</div>

<a asp-action="Index" class="btn btn-info mt-3">Go back to library</a>
