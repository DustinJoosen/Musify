@model Musify.MVC.Models.Album

@{
    ViewData["Title"] = Model.Title;
}

<div id="album-detail-page">
    <h1 class="my-4">
        @Model.Title
    </h1>
    <div class="row col-12">
        <dl class="col-6">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Genre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Genre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Artist)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Artist.Name)
            </dd>
            <div class="mt-5">
                @await Component.InvokeAsync("SongList", new { songs = Model.AlbumSongs.Select(albumsong => albumsong.Song).ToList() })
            </div>
            <button class="btn btn-light mt-3">Back</button>
        </dl>
        <div class="col-4">
            <img class="artist-detail-image" src="/uploads//albums/@Model.CoverImage" width="500" />
        </div>
    </div>
    <div class="album-big-hearth">
        <span class="big-like-btn albumlikebtn @(ViewBag.Liked ? "liked" : "")" albumid="@Model.Id"><i class="fa-solid fa-heart"></i></span>
    </div>
</div>
