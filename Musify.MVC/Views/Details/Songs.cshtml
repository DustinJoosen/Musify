@model Musify.MVC.Models.Song

@{
    ViewData["Title"] = Model.Title;
}

<div id="album-detail-page">
    <h1 class="my-4">
        @Model.Title
    </h1>
    <div class="row col-12">
        <dl class="col-6">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </dt>
            <dd class="col-sm-10">
                @Model.ReleaseDate.ToString("dd/MM/yyyy")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Duration)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FormattedDuration)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Artist)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Artist.Name)
            </dd>
            <dt class="col-sm-2">
                Album count
            </dt>
            <dd class="col-sm-10">
                @Model.AlbumSongs.Count()
            </dd>
            <dt class="col-sm-2">
                Like count
            </dt>
            <dd class="col-sm-10">
                @Model.UserSongLikes.Count()
            </dd>
            <a class="btn btn-light mt-3" asp-action="Index" asp-controller="Explore">Back to the explore page</a>
        </dl>
    </div>
    <div class="song-big-hearth">
        <span class="big-like-btn songlikebtn @(ViewBag.Liked ? "liked" : "")" songid="@Model.Id"><i class="fa-solid fa-heart"></i></span>
    </div>
</div>
