@model List<Album>

<h3>Albums</h3>

<div class="explore-table mt-4">
    @if (Model.Any())
    {
        <table class="table table-striped table-bordered table-sm">
            <thead class="thead-dark">
                <tr class="table-header">
                    <th width="80">Actions</th>
                    <th>Cover</th>
                    <th>Title</th>
                    <th width="200">Artist</th>
                    <th width="200">Genre</th>
                    <th width="60">Add</th>
                </tr>
            </thead>
            @foreach (Album album in Model)
            {
                <tr class="min-width">
                    <td style="display: flex">
                        <button class="songlikebtn"><i class="fa-solid fa-heart"></i></button>
                        <button class="songplaybtn"><i class="fa-solid fa-play"></i></button>
                    </td>
                    <td>
                        <img class="explore-table-albums-cover" src="~/uploads/albums/@album.CoverImage" />
                    </td>
                    <td>
                        <a asp-controller="Details" asp-action="Albums" asp-route-id="@album.Id">@album.Title</a>
                    </td>
                    <td>@album.Artist.Name</td>
                    <td>@album.Genre</td>
                    <td>
                        <button class="btn btn-light">Add</button>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No albums were found.</p>
    }
</div>