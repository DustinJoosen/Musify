@model List<SongViewModel>

<h3>Songs</h3>

<div class="explore-table mt-4">
    @if (Model.Any())
    {
        <table class="table table-striped table-bordered table-sm">
            <thead class="thead-dark">
                <tr class="table-header">
                    <th width="80">Actions</th>
                    <th>Title</th>
                    <th width="200">Artist</th>
                    <th width="100">Duration</th>
                </tr>
            </thead>
            @foreach (var song in Model)
            {
                <tr class="min-width">
                    <td style="display: flex">
                        <button class="songlikebtn @(song.Liked ? "liked" : "")" songid="@song.Id"><i class="fa-solid fa-heart"></i></button>
						<button class="songplaybtn" songname="@song.Title"><i class="fa-solid fa-play"></i></button>
                    </td>
                    <td>
                        <a asp-controller="Details" asp-action="Songs" asp-route-id="@song.Id" >@song.Title</a>
                    </td>
                    <td>@song.ArtistName</td>
                    <td>@song.FormattedDuration</td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No songs were found.</p>
    }
</div>
