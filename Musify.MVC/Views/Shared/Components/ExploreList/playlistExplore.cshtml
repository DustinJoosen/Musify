@model List<DisplayedPlaylistDto>

<h3>Playlist</h3>

<div class="explore-table mt-4">
    @if (Model.Any())
    {
        <table class="table table-striped table-bordered table-sm">
            <thead class="thead-dark">
                <tr class="table-header">
                    <th width="80">Actions</th>
                    <th>Title</th>
                    <th width="200">Created by</th>
                    <th width="60">Add</th>
                </tr>
            </thead>
            @foreach (var playlist in Model)
            {
                <tr class="min-width">
                    <td style="display: flex">
                        <button class="playlistlikebtn @(playlist.Liked ? "liked" : "")" playlistid="@playlist.Id"><i class="fa-solid fa-heart"></i></button>
                        <button class="songplaybtn" songname="@string.Join(',', playlist.Songs.Select(s => s.Title))"><i class="fa-solid fa-play"></i></button>
                    </td>
                    <td>
                        <a asp-controller="Playlist" asp-action="Details" asp-route-id="@playlist.Id">@playlist.Title</a>
                    </td>
                    <td>&#64;@playlist.Username</td>
                    <td>
                        <button class="btn btn-light addQueue" songname="@string.Join(',', playlist.Songs.Select(s => s.Title))">Add</button>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No playlists were found.</p>
    }
</div>