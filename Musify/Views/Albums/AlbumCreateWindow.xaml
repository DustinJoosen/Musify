<UserControl x:Class="Musify.Views.Albums.AlbumCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:Musify.Views.Albums"
        mc:Ignorable="d" 
        Background="#e9e9e9"
        d:DesignHeight="250" d:DesignWidth="320">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="10"></ColumnDefinition>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="20"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="10"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="10"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="10"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="Create new Album" HorizontalAlignment="Center" FontSize="20" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3"  />
        <Label Content="Title " HorizontalAlignment="Right" Grid.Row="3"  Grid.Column="1"/>
        <Label Content="Release Year " HorizontalAlignment="Right" Grid.Row="4"  Grid.Column="1"/>
        <Label Content="Image " HorizontalAlignment="Right" Grid.Row="5"  Grid.Column="1"/>
        <TextBox Grid.Row="3" Grid.Column="3" Height="20" Text="{Binding Title}" />
        <TextBox Grid.Row="4" Grid.Column="3" Height="20" Text="{Binding ReleaseYear}" />
        <TextBox Grid.Row="5" Grid.Column="3" Height="20" Text="{Binding CoverImage}" />
        <Button Content="Save" Grid.Row="7" Grid.Column="3" Background="LightGreen" Command="{Binding OnSaveAlbum}" />
        <Button Content="Back" Grid.Row="7" Grid.Column="1" Background="LightGray" />
    </Grid>
</UserControl>
